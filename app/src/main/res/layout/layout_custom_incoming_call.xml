<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/call_cl"
        android:background="@mipmap/call_img_1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/apply_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/apply_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:text="000-12345678"
            android:textColor="#FFF7F7F7"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="28dp"
            android:id="@+id/contactPhotoImageView"
            android:src="@drawable/white_cir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apply_number" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/apply_no"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:src="@mipmap/apply_no"
            app:layout_constraintBottom_toBottomOf="@id/line"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:layout_marginBottom="93dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appky_yes"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:src="@mipmap/apply_yes"
            app:layout_constraintBottom_toBottomOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
